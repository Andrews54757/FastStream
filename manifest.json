{
    "manifest_version": 3,
    "name": "FastStream",
    "description": "Stream without ever buffering",
    "version": "1.0.21",
    "author": "Andrew S",
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_icon": "icon128.png",
        "default_title": "Toggle FastStream"
    },
    "background": {
        "service_worker": "background.mjs",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "run_at": "document_start",
            "js": [
                "content.js"
            ]
        }
    ],
    "incognito": "split",
    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content.js",
                "player/player.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
}